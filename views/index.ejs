<%- include('./_layouts/header'); %>
    <div class="post-content">
        <div class="row">
            <div class="col-lg-3">
                <h7 class="hello">hello,</h7> <br>
                <% if (user) { %>
                    <span class="user-name" ><%= user.name %>,</span>
                <% } %>
                <img src="<%= user.profilepic %>" class="img-fluid mx-auto d-block index-profilePic" alt="profile"> <br> <br>
                <a href="/posts/create-post" class="create-post-link">Create Post</a>
            </div>
            <div class="col-lg-8 all-posts">
                <div class="heading"><span class="heading-title">Posts</span></div>
                <% for(let i of post){ %>
                    <div class="col-lg-12 posts" >
                        <span class="post-user"><%= i.user.name %></span><div class="float-right"><span class="createdAt" float="right"><%= (i.createdAt).toDateString() %></span></div>
                        <p class="post-content_text"><%= i.content %></p>
                        <% if (i.postImg !== "") { %>
                            <img src="<%= i.postImg %>" class="img-fluid post_image p-2">
                        <% } %>
                        <div class="post-comment">
                            <form action="/comments/create" method="POST">
                               <div class="row">
                                <div class="col-lg-10">
                                    <input class="form-control" type="text" name="content" placeholder="Type here to add comment..">
                                </div>
                                <input type="hidden" name="post_id" value="<&= i._id %>">
                                <div class="col-lg-1">
                                    <button class="form-control btn btn-dark" type="submit" value="add-comment"><span class="send-comment-icon"><i class="fas fa-angle-right"></i></span></button>
                                </div>
                               </div>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<%- include('./_layouts/footer'); %>