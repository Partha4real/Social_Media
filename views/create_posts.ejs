<div class="create-post p-4">
    <a href="/posts" class="btn btn-info">Home</a>
    <form action="/posts/create-post" method="post">
        <!-- content -->
        <div class="from-group mt-2">
            <label for="">Content</label>
            <textarea name="content" class="form-control" cols="50" rows="10"  placeholder="Content" required></textarea>
        </div>
        <div class="from-group mt-2">
            <label for="postImg">Post Picture</label>
            <input type="text" class="form-control" name="postImg"> 
         </div>
        <input type="submit" class="btn btn-success mt-2" value="Create Post">
    </form>
</div>

