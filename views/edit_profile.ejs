<%- include('./_layouts/header'); %>
   <div class="container">
      <br>
      <h2 class="page-title">Edit a product</h2>
      <a href="/profile" class="btn btn-primary">Back to profile</a>
      <br><br>

      <form action="/profile/edit-profile/<%= id %>" method="post">
         <div class="row">
            <div class="col-lg-3 m-2">
               <div class="from-group">
                  <label for="">Current Profile Picture</label>
                     <img class="img-fluid image-product" src="<%= profilepic %>">
               </div>
               <div class="from-group">
                  <label for="profilepic">Update Profile Picture</label>
                  <input type="text" class="form-control" name="profilepic" 
                     value="<%= typeof profilepic != 'undefined' ? profilepic : '' %>" 
                     placeholder="Link of Profile Picture"
                     onchange="document.getElementById('imgPreview').src = window.URL.createObjectURL(this.files[0]); document.getElementById('imgPreview').setAttribute('style', 'width: 100px');">  <!--preview image -->
                  <img id="imgPreview">
               </div>
               <input type="hidden" name="pimage" value="<%= profilepic %>">
            </div>

            <div class="col-lg-7 m-2">
               <div class="from-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" placeholder="Name">
               </div> 
               <div class="from-group">
                  <label for="email">Email</label>
                  <input type="text" class="form-control" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email">
               </div> 
               <div class="from-group">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" name="username" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username">
               </div> 
               <div class="from-group">
                  <label for="country">Country</label>
                  <input type="text" class="form-control" name="country" value="<%= typeof country != 'undefined' ? country : '' %>" placeholder="Country">
               </div> 
               <div class="from-group">
                  <label for="languages">Languages</label>
                  <input type="text" class="form-control" name="languages" value="<%= typeof languages != 'undefined' ? languages : '' %>" placeholder="Languages">
               </div> 
               <label for="gender">Gender</label>
               <select name ="gender" class="from-group m-2">
                     <option value="male">Male</option>
                     <option value="female">Female</option>
                     <option value="others">Others</option>
               </select>
               <div class="from-group">
                  <label for="dob">DOB</label>
                  <input type="date" class="form-control" name="dob" value="<%= typeof dob != 'undefined' ? dob : '' %>" id="">
               </div> 
               <div class="from-group">
                  <label for="facebook">Facebook</label>
                  <input type="url" class="form-control" name="facebook" value="<%= typeof facebook != 'undefined' ? facebook : '' %>" placeholder="Facebook">
               </div>
               <div class="from-group">
                  <label for="instagram">Instagram</label>
                  <input type="url" class="form-control" name="instagram" value="<%= typeof instagram != 'undefined' ? instagram : '' %>" placeholder="Instagram">
               </div>
               <div class="from-group">
                  <label for="youtube">Youtube</label>
                  <input type="url" class="form-control" name="youtube" value="<%= typeof youtube != 'undefined' ? youtube : '' %>" placeholder="Youtube">
               </div>
               
               
               <button type="submit" class="btn btn-success mt-1">Submit</button>
            </div>
         </div>   
      </form>
   </div>    






